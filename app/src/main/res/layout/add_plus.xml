<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сарлавҳа"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хабар матни"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        app:counterEnabled="true"

        app:endIconMode="clear_text"
        app:helperTextTextColor="#125AEA"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_player_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_short_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Youtube linkini to'lliq kiriting!"
            android:textSize="14dp"
            android:textStyle="italic" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/negativeButton"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:layout_margin="12dp"
            android:text="Бошқа"
            android:src="@drawable/baseline_arrow_back_24"/>

        <ImageView
            android:id="@+id/neutralButton"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:text="Йўқ"
            android:layout_margin="12dp"
            android:src="@drawable/add_2_24px"/>

        <ImageView
            android:id="@+id/positiveButton"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:text="Ҳа"
            android:layout_margin="12dp"
            android:src="@drawable/add_2_24px"
            app:itemIconTint="#000000"            />


    </LinearLayout>

</LinearLayout>